{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "#Applications/*": ["src/Applications/*"],
      "#Commons/*": ["src/Commons/*"],
      "#Domains/*": ["src/Domains/*"],
      "#Infrastructures/*": ["src/Infrastructures/*"],
      "#Interfaces/*": ["src/Interfaces/*"],
      "#TestHelper/*": ["tests/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    ".nuxt",
    "coverage",
    "jspm_packages",
    "tmp",
    "temp",
    "bower_components",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
